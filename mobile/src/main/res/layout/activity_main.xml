<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Wear OS Sensor Data"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/sensorDataText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/lastUpdateText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="#888888"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp">

        <!-- Peak value above -->
        <TextView
            android:id="@+id/peakTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Peak: 0 BPM"
            android:textSize="12sp"
            android:textStyle="italic"
            android:gravity="center"
            android:layout_marginBottom="4dp"
            android:fontFamily="monospace"/>

        <!-- Heart Rate Display -->
        <TextView
            android:id="@+id/heartRateDisplay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Heart Rate: 0 BPM"
            android:textSize="24sp"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_marginBottom="4dp"
            android:fontFamily="monospace"/>

        <!-- Low value below -->
        <TextView
            android:id="@+id/lowTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Low: 0 BPM"
            android:textSize="12sp"
            android:textStyle="italic"
            android:gravity="center"
            android:fontFamily="monospace"/>
    </LinearLayout>

    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/heartRateChart"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="16dp"
        android:background="@android:color/white"
        android:fontFamily="monospace"/>

    <Button
        android:id="@+id/PersonalInfoButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Switch to personal info activity" />

    <Button
        android:id="@+id/generateButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Suggest" />

    <Button
        android:id="@+id/historyButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View Heart Rate History"
        android:layout_marginTop="16dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:fillViewport="true">

        <TextView
            android:id="@+id/responseText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:padding="8dp" />

    </ScrollView>

</LinearLayout>